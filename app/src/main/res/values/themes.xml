<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleDictionary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/fon</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Launcher" parent="Theme.SimpleDictionary">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="EmailTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/email</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="startIconDrawable">@drawable/ic_email_24</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="PasswordTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="startIconDrawable">@drawable/ic_key_24</item>
        <item name="endIconMode">password_toggle</item>
    </style>

</resources>